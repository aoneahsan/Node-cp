extends ./../layouts/main.pug

block content
    h1.display-4 Add Product
    <form action="/add-product" method="post" class="form w-75 mx-auto">
        <div class="form-group text-left">
            <label for="title">Enter Product Title</label>
            input.form-control.title(required, placeholder="Enter Product Title", type="text", name="title")
            button.btn.btn-outline-info.btn-sm.mx-auto.mt-4(type="submit") Add Product