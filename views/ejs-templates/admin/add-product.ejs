<%- include('./../../includes/header.ejs') %>
<main class="text-center">
    <div class="conatiner">
        <h1 class="display-4">Add Product</h1>
        <form
            action="/admin/add-product"
            method="post"
            class="form w-75 mx-auto"
            enctype="multipart/form-data"
        >
            <div class="form-group text-left">
                <label for="title">Enter Product Title</label>
                <input
                    type="text"
                    class="form-control"
                    name="title"
                    required
                    id="title"
                    placeholder="Enter Product Title"
                    
                />
            </div>
            <div class="form-group text-left">
                <label for="image" class="w-100">Enter Product Image</label>
                <input
                    type="file"
                    name="image"
                    required
                    id="image"
                    required
                    accept="image/*"
                />
            </div>
            <div class="form-group text-left">
                <label for="price">Enter Product Price</label>
                <input
                    type="number"
                    step="0.01"
                    class="form-control"
                    name="price"
                    required
                    id="price"
                    required
                    placeholder="Enter Product Price"
                    
                />
            </div>
            <div class="form-group text-left">
                <label for="description">Enter Product Description</label>
                <textarea
                    class="form-control"
                    name="description"
                    required
                    id="description"
                    required
                    placeholder="Enter Product Description"
                ></textarea>
            </div>
            <input type="hidden" name="_csrf" value="<%= csrfTokken %>" />
            <button type="submit" class="btn btn-outline-info btn-sm mx-auto">
                Add Product
            </button>
        </form>
    </div>
</main>
<%- include('./../../includes/footer.ejs') %>
